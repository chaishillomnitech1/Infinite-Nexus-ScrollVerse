# ScrollVerse PostgreSQL Configuration Template
# Copy this file to .env and fill in your PostgreSQL connection details

# PostgreSQL Connection Settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=scrollverse
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# SSL Configuration
POSTGRES_SSL=false

# Connection Pool Settings
POSTGRES_MAX_CONNECTIONS=10
POSTGRES_IDLE_TIMEOUT=30000

# ScrollVerse Frequency Settings
SCROLLVERSE_FREQUENCY=528
SCROLLVERSE_RESONANCE_FIELD=active

# NFT Layer Configuration
NFT_METADATA_SCHEMA=public
NFT_METADATA_TABLE=nft_metadata

# Akashic Frequency Layer Configuration
AKASHIC_SCHEMA=public
AKASHIC_FREQUENCIES_TABLE=akashic_frequencies
AKASHIC_LAYERS_TABLE=frequency_layers

# Optimization Settings
ENABLE_AUTOVACUUM=true
ENABLE_QUERY_OPTIMIZATION=true
ENABLE_BLOAT_MONITORING=true

# Dataclass Generation Settings
PYTHON_DATACLASS_OUTPUT_DIR=./generated/dataclasses
GENERATE_TYPE_HINTS=true
GENERATE_VALIDATION=true

# Performance Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# Debug Settings
DEBUG_SQL_QUERIES=false
LOG_LEVEL=info
